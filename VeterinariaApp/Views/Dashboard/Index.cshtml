
@model VeterinariaApp.Models.TotalesDashboard

@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_LayoutVeterinaria.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<div class="container-fluid py-4">
    <!-- Encabezado -->
    <div class="card border-0 shadow-sm mb-4 bg-light text-center p-5 rounded-4">
        <div class="d-flex justify-content-center align-items-center gap-3">
            <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                <i class="bi bi-stars text-primary fs-2"></i>
            </div>
        </div>
        <h2 class="fw-bold text-dark mt-3">¡Bienvenido a <span class="text-primary">VetClinic</span>! 🐾</h2>
        <p class="text-muted">Tu centro de gestión veterinaria más amigable</p>
    </div>

    <!-- Tarjetas -->
    <div class="row g-4">
        <!-- Total Clientes -->
        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-4 p-4 h-100">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-primary fw-semibold">Total Clientes</h6>
                        <h2 class="fw-bold text-dark">@Model.TotalClientes</h2>
                        <small class="text-success">+12% este mes ✏️</small>
                    </div>
                    <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                        <i class="bi bi-people-fill text-primary fs-3"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Mascotas -->
        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-4 p-4 h-100">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-success fw-semibold">Total Mascotas</h6>
                        <h2 class="fw-bold text-dark">@Model.TotalMascotas</h2>
                        <small class="text-success">+8% este mes 🐾</small>
                    </div>
                    <div class="bg-success bg-opacity-10 rounded-circle p-3">
                        <i class="bi bi-heart-fill text-success fs-3"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Citas Hoy -->
        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-4 p-4 h-100">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-danger fw-semibold">Citas Hoy</h6>
                        <h2 class="fw-bold text-dark">@Model.CitasHoy</h2>
                        <small class="text-muted">Pendientes ⏰</small>
                    </div>
                    <div class="bg-danger bg-opacity-10 rounded-circle p-3">
                        <i class="bi bi-calendar-event-fill text-danger fs-3"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Ingresos Mensuales -->
        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-4 p-4 h-100">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-purple fw-semibold">Ingresos Mensuales</h6>
                        <h2 class="fw-bold text-dark">S/.@Model.IngresosMensuales</h2>
                        <small class="text-success">+15% este mes 💰</small>
                    </div>
                    <div class="bg-purple bg-opacity-10 rounded-circle p-3">
                        <i class="bi bi-cash-stack text-purple fs-3"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Próximas Citas -->
<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">
            <div class="card shadow-sm border-0 rounded-4">
                <!-- Header -->
                <div class="card-header bg-primary text-white">
                    <i class="bi bi-calendar2-heart"></i>&nbsp;Próximas Citas
                </div>

                <!-- Items -->
                <ul class="list-group list-group-flush">
                    @{
                        var proximasCitas = ViewBag.ProximasCitas as List<ProximasCitas>;
                        int i = 0;
                    }
                    @foreach (var c in proximasCitas ?? new())
                    {
                        <li class="list-group-item border-0 border-bottom px-3 py-2 d-flex align-items-center gap-2">
                            <!-- Icon -->
                            <i class="bi bi-calendar-check text-primary fs-5"></i>

                            <!-- Info -->
                            <div class="flex-grow-1 small">
                                <strong>@c.Mascota - @c.Cliente</strong><br />
                                <span class="text-muted">
                                    @c.FechaHora.ToString("dd/MM/yyyy") a las @c.FechaHora.ToString("HH:mm")
                                </span><br />
                                <span>@c.Motivo</span>
                            </div>

                            <!-- Status badge -->
                            <span class="badge
                                  @(c.EstadoCita == "Pendiente" ? "bg-warning text-dark" :
                                    c.EstadoCita == "Atendida"   ? "bg-success" : "bg-secondary")">
                                @c.EstadoCita
                            </span>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
@if (ViewBag.TotalPaginas > 1)
{
    <nav class="mt-4">
        <ul class="pagination justify-content-center">
            <!-- Botón Anterior -->
            <li class="page-item @(ViewBag.PaginaActual == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-pagina="@(ViewBag.PaginaActual - 1)">
                    ⬅️ Anterior
                </a>
            </li>

            <!-- Botón Siguiente -->
            <li class="page-item @(ViewBag.PaginaActual == ViewBag.TotalPaginas ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-pagina="@(ViewBag.PaginaActual + 1)">
                    Siguiente ➡️
                </a>
            </li>
        </ul>
    </nav>
}