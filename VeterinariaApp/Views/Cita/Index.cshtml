@model IEnumerable<VeterinariaApp.Models.Cita>

@{
    ViewData["Title"] = "Citas (Vista Tabla)";
    Layout = "~/Views/Shared/_LayoutVeterinaria.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="fw-bold text-primary mb-0">
        <i class="bi bi-table"></i> Citas
    </h1>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Nueva Cita
    </a>
</div>

<!-- Selector de vista -->
<div class="btn-group mb-3" role="group">
    <a asp-action="Calendario" class="btn btn-outline-secondary">
        <i class="bi bi-calendar-week"></i> Vista Calendario
    </a>
    <a asp-action="Index" class="btn btn-outline-secondary active">
        <i class="bi bi-table"></i> Vista Tabla
    </a>
</div>

<!-- Tabla de citas -->
<div class="card shadow-sm">
    <div class="card-header bg-light fw-semibold">
        Lista de Citas
    </div>
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="alert alert-info text-center">
                No hay citas registradas.
            </div>
        }
        else
        {
            <table class="table table-striped table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>IdCita</th>
                        <th>Fecha</th>
                        <th>Mascota</th>
                        <th>Veterinario</th>
                        <th>Motivo</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cita in Model)
                    {
                        var tipoBadge = cita.Motivo switch
                        {
                            "Consulta" => "info",
                            "Vacunacion" => "success",
                            "Cirugia" => "danger",
                            _ => "secondary"
                        };

                        var estadoBadge = cita.EstadoCita switch
                        {
                            "Pendiente" => "warning",
                            "Completada" => "success",
                            _ => "secondary"
                        };

                        <tr>
                            <td>@cita.IdCita</td>
                            <td>@cita.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@cita.Mascota?.Nombre</td>
                            <td>@cita.Veterinario?.NombreCompleto</td>
                            <td><span class="badge bg-@tipoBadge">@cita.Motivo</span></td>
                            <td><span class="badge rounded-pill bg-@estadoBadge">@cita.EstadoCita</span></td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@cita.IdCita" class="btn btn-sm btn-primary">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@cita.IdCita" class="btn btn-sm btn-info text-white">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@cita.IdCita" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
<!-- PAGINACIÓN -->
<nav aria-label="Page navigation" class="mt-4">
    <ul class="pagination justify-content-center">
        <!-- Botón "Anterior" -->
        <li class="page-item @(ViewBag.paginaActual <= 1 ? "disabled" : "")">
            <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.paginaActual - 1)">Anterior</a>
        </li>

        <!-- Números de página -->
        @for (int x = 1; x <= ViewBag.totalPaginas; x++)
        {
            <li class="page-item @(x == ViewBag.paginaActual ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@x">@x</a>
            </li>
        }

        <!-- Botón "Siguiente" -->
        <li class="page-item @(ViewBag.paginaActual >= ViewBag.totalPaginas ? "disabled" : "")">
            <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.paginaActual + 1)">Siguiente</a>
        </li>
    </ul>
</nav>
