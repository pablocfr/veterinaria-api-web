@model VeterinariaApp.Models.Detalle_Venta

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutVeterinaria.cshtml";
}

<h2 class="mb-4">Detalle de Venta #@Model.Venta.IdVenta</h2>

<div class="card mb-3">
    <div class="card-header">
        <strong>Datos de la Venta</strong>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">ID Venta:</dt>
            <dd class="col-sm-8">@Model.Venta.IdVenta</dd>

            <dt class="col-sm-4">Cliente:</dt>
            <dd class="col-sm-8">@Model.Venta.Cliente.Nombre</dd>

            <dt class="col-sm-4">Fecha:</dt>
            <dd class="col-sm-8">@Model.Venta.Fecha.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-4">Total Venta:</dt>
            <dd class="col-sm-8">@Model.Venta.Total.ToString("C")</dd>
        </dl>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <strong>Detalle del Producto/Servicio</strong>
    </div>
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="thead-light">
                <tr>
                    <th>Producto</th>
                    <th>Servicio</th>
                    <th class="text-center">Cantidad</th>
                    <th class="text-end">Subtotal</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@(Model.Producto?.Nombre ?? "-")</td>
                    <td>@(Model.Servicio?.Nombre ?? "-")</td>
                    <td class="text-center">@Model.Cantidad</td>
                    <td class="text-end">@Model.SubTotal.ToString("C")</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<div class="mt-3">
    <a asp-controller="Ventas" asp-action="Index" class="btn btn-outline-secondary">Regresar al listado</a>
</div>