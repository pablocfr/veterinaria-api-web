@model IEnumerable<VeterinariaApp.Models.Veterinario>


@{
    ViewData["Title"] = "Veterinarios";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<div class="container py-4">
    <div class="card shadow-sm p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2 class="text-primary fw-bold">Veterinarios <i class="fas fa-user-md"></i></h2>
                <p class="text-muted">Nuestro increíble equipo médico</p>
            </div>
            <a class="btn btn-primary" asp-action="Create">
                <i class="fas fa-user-plus me-1"></i> Agregar Veterinario
            </a>
        </div>

        <div class="row g-3">
            @foreach (var item in Model)
            {
                <div class="col-md-6">
                    <div class="card shadow-sm p-3">
                        <div class="d-flex align-items-start">
                            <!-- Avatar circular con iniciales -->
                            <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center me-3"
                                 style="width: 55px; height: 55px; font-weight: bold;">
                                @item.NombreCompleto.Substring(0, 1).ToUpper()
                            </div>

                            <!-- Datos del veterinario -->
                            <div class="flex-grow-1">
                                <h5 class="fw-bold mb-0">Dr(a). @item.NombreCompleto</h5>
                                <span class="badge bg-light text-primary border">@item.Especialidad</span>

                                <div class="mt-2">
                                    <p class="mb-1"><i class="fas fa-id-card me-1 text-secondary"></i> DNI: @item.DNI</p>
                                    <p class="mb-1"><i class="fas fa-phone-alt me-1 text-danger"></i> @item.Telefono</p>
                                    <p class="mb-0"><i class="fas fa-envelope me-1 text-secondary"></i> @item.Correo</p>
                                    <p class="mb-0"><i class="fas fa-check me-1 text-success"></i> @(item.Estado ? "Activo" : "Inactivo")</p>
                                </div>
                            </div>

                            <!-- Rating fijo o simulado -->
                            <div class="ms-3 text-warning">
                                <i class="fas fa-star"></i> @((item.IDVeterinario % 2 == 0) ? "4.8" : "4.9")
                            </div>
                        </div>

                        <!-- Botones de acción -->
                        <div class="mt-3 d-flex gap-3">
                            <a class="text-decoration-none text-primary" asp-action="Edit" asp-route-id="@item.IDVeterinario">
                                <i class="fas fa-edit me-1"></i> Editar
                            </a>
                            <a class="text-decoration-none text-danger" asp-action="Delete" asp-route-id="@item.IDVeterinario">
                                <i class="fas fa-trash-alt me-1"></i> Eliminar
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- PAGINACIÓN -->
        <nav aria-label="Page navigation" class="mt-4">
            <ul class="pagination justify-content-center">
                <!-- Botón "Anterior" -->
                <li class="page-item @(ViewBag.paginaActual <= 1 ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.paginaActual - 1)">Anterior</a>
                </li>

                <!-- Números de página -->
                @for (int x = 1; x <= ViewBag.totalPaginas; x++)
                {
                    <li class="page-item @(x == ViewBag.paginaActual ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@x">@x</a>
                    </li>
                }

                <!-- Botón "Siguiente" -->
                <li class="page-item @(ViewBag.paginaActual >= ViewBag.totalPaginas ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.paginaActual + 1)">Siguiente</a>
                </li>
            </ul>
        </nav>
    </div>
</div>
