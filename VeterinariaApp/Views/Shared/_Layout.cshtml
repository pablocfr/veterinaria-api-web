@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VetClinic Pro</title>

    <!-- TailwindCSS (opcional) o Bootstrap según uses -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f8fafc;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            background: #fff;
            box-shadow: 0 0 15px rgba(0,0,0,0.05);
            position: fixed;
            left: 0;
            top: 0;
            padding: 20px 0;
        }

            .sidebar a {
                display: block;
                padding: 12px 20px;
                color: #444;
                text-decoration: none;
            }

                .sidebar a.active,
                .sidebar a:hover {
                    background: #f0f4ff;
                    color: #2563eb;
                    border-radius: 10px;
                }

        .main {
            margin-left: 250px;
            padding: 20px;
        }

        .header {
            height: 60px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 20px;
            background: #fff;
            border-bottom: 1px solid #e5e7eb;
            position: sticky;
            top: 0;
            z-index: 10;
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <h4 class="px-3 mb-4 text-primary">
            <i class="fa-solid fa-heart text-danger"></i> VetClinic Pro
        </h4>
        <a href="/Dashboard" class="active"><i class="fa fa-chart-line me-2"></i> Dashboard</a>
        <a href="/Clientes"><i class="fa fa-users me-2"></i> Clientes</a>
        <a href="/Mascotas"><i class="fa fa-dog me-2"></i> Mascotas</a>
        <a href="/Veterinarios"><i class="fa fa-user-md me-2"></i> Veterinarios</a>
        <a href="/Citas"><i class="fa fa-calendar-check me-2"></i> Citas</a>
        <a href="/Historiales"><i class="fa fa-notes-medical me-2"></i> Historiales</a>
        <a href="/Producto"><i class="fa fa-box-open me-2"></i> Productos</a>
        <a href="/Proveedores"><i class="fa fa-truck me-2"></i> Proveedores</a>
        <a href="/Servicios"><i class="fa fa-stethoscope me-2"></i> Servicios</a>
        <a href="/Ventas"><i class="fa fa-receipt me-2"></i> Ventas</a>
        <a href="/Reportes"><i class="fa fa-file-alt me-2"></i> Reportes</a>
    </div>

    <!-- Main content -->
    <div class="main">
        <div class="header">
            <div>
                <span class="fw-bold">VetClinic Pro</span> / <span class="text-muted">@ViewData["Title"]</span>
            </div>
            <div>
                <i class="fa fa-bell me-3"></i>
                <i class="fa fa-cog"></i>
            </div>
        </div>

        <!-- Aquí se inyecta el contenido de cada vista -->
        <div class="container-fluid mt-3">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

