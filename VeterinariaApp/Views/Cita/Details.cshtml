@model VeterinariaApp.Models.Cita

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutVeterinaria.cshtml";
}

@if (Model == null)
{
    <div class="alert alert-danger">No se encontró la cita.</div>
}
else
{
    <h1>Detalle de Cita</h1>

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.IdCita)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.IdCita)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Fecha)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Fecha)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Motivo)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Motivo)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.IdMascota)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.IdMascota)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.IDVeterinario)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.IDVeterinario)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Estado)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Estado)</dd>
        </dl>
    </div>

    <div class="mt-3 d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.IdCita" class="btn btn-primary btn-sm">
            ✏️ Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary btn-sm">
            📋 Volver a la Lista
        </a>
    </div>

}
