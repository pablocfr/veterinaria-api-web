@model IEnumerable<VeterinariaApp.Models.Cita>

@{
    ViewData["Title"] = "Calendario de Citas";
    Layout = "~/Views/Shared/_LayoutVeterinaria.cshtml";
}

<!-- Encabezado -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="fw-bold text-primary mb-0">
        <i class="bi bi-calendar-week"></i> Calendario de Citas (@ViewBag.FechaSeleccionada.ToString("dd/MM/yyyy"))
    </h1>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Nueva Cita
    </a>
</div>

<!-- Selector de vista -->
<div class="btn-group mb-3" role="group">
    <a asp-action="Calendario" class="btn btn-outline-secondary active">
        <i class="bi bi-calendar-week"></i> Vista Calendario
    </a>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-table"></i> Vista Tabla
    </a>
</div>

<div class="row">
    <!-- Calendario -->
    <div class="col-md-4 mb-3">
        <div class="card shadow-sm">
            <div class="card-header bg-light fw-semibold text-center">
                Selecciona una fecha
            </div>
            <div class="card-body d-flex justify-content-center">
                <div id="calendar"></div>
            </div>
        </div>
    </div>

    <!-- Listado de citas -->
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header bg-light fw-semibold">
                Citas del día seleccionado
            </div>
            <div class="card-body">
                @if (!Model.Any())
                {
                    <div class="alert alert-info text-center">
                        No hay citas para esta fecha.
                    </div>
                }
                else
                {
                    foreach (var cita in Model)
                    {
                        var tipoBadge = cita.Motivo switch
                        {
                            "Consulta" => "info",
                            "Vacunacion" => "success",
                            "Cirugia" => "danger",
                            _ => "secondary"
                        };

                        var estadoBadge = cita.EstadoCita switch
                        {
                            "Pendiente" => "warning",
                            "Completada" => "success",
                            _ => "secondary"
                        };

                        <div class="card mb-3 border-0 shadow-sm">
                            <div class="card-body d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="fw-bold mb-1">@cita.Fecha.ToString("HH:mm") - @cita.Mascota?.Nombre</h5>
                                    <small class="text-muted">
                                        @cita.Mascota?.Nombre<br />
                                        @cita.Veterinario?.NombreCompleto
                                    </small>
                                    <div class="mt-2">
                                        <span class="badge bg-@tipoBadge">@cita.Motivo</span>
                                    </div>
                                </div>
                                <span class="badge rounded-pill bg-@estadoBadge">@cita.EstadoCita</span>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>

<!-- Scripts -->
@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/main.min.css" rel="stylesheet" />
    <style>
        /* Estilo compacto para el calendario */
        #calendar {
            width: 100%;
            max-width: 280px; /* Más pequeño y centrado */
            font-size: 0.8rem; /* Texto reducido */
        }

        /* Reducir alto de las celdas */
        .fc-daygrid-day-frame {
            min-height: 60px !important;
        }

        /* Ajustar cabecera del calendario */
        .fc-toolbar h2 {
            font-size: 1rem !important;
        }

        /* Botones más pequeños */
        .fc-button {
            padding: 2px 6px !important;
            font-size: 0.75rem !important;
        }

        /* Números de día más pequeños */
        .fc-daygrid-day-number {
            font-size: 0.75rem;
        }
    </style>

    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/index.global.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var calendarEl = document.getElementById('calendar');
            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                locale: 'es',
                height: 'auto', // Ajuste dinámico
                contentHeight: 350, // Altura reducida
                dateClick: function (info) {
                    window.location.href = '@Url.Action("Calendario", "Cita")?fecha=' + info.dateStr;
                }
            });
            calendar.render();
        });
    </script>
}
