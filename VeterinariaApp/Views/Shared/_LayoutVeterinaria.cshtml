<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">

	<link href="~/css/stylesheet.css" rel="stylesheet" />

</head>
<body>
    <!-- Sidebar -->
    <nav id="sidebar" class="sidebar">
        <div class="text-center mb-4">
            <i class="fa-solid fa-dog fs-2 text-primary"></i>
            <h5 class="mt-2 fw-bold">VetClinic Pro</h5>
        </div>
        <ul class="nav flex-column px-3">
            <li class="nav-item">
                <a class="nav-link active" asp-action="Index" asp-controller="Dashboard">
                    <i class="bi bi-grid me-2"></i>Dashboard
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="Index" asp-controller="Cliente">
                    <i class="bi bi-people me-2"></i>Clientes
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="Index" asp-controller="Mascota">
                    <i class="bi bi-heart me-2"></i>Mascotas
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="Index" asp-controller="Veterinario">
                    <i class="bi bi-person-vcard me-2"></i>Veterinarios
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="Index" asp-controller="Cita">
                    <i class="bi bi-calendar-event me-2"></i>Citas
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="Index" asp-controller="Historial">
                    <i class="bi bi-file-earmark-medical me-2"></i>Historiales
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="Index" asp-controller="Producto">
                    <i class="bi bi-box me-2"></i>Productos
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="Index" asp-controller="Proveedor">
                    <i class="bi bi-truck me-2"></i>Proveedores
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="Index" asp-controller="Servicio">
                    <i class="bi bi-tools me-2"></i>Servicios
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="Index" asp-controller="Venta">
                    <i class="bi bi-cart me-2"></i>Ventas
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="Index" asp-controller="Reporte">
                    <i class="bi bi-graph-up me-2"></i>Reportes
                </a>
            </li>
        </ul>
    </nav>

    <!-- Contenido principal -->
    <div class="main-content d-grid" id="mainContent">
        <div class="nav-burger">
            <button class="hamburger" id="toggleSidebar" aria-label="Menú">
                <i class="bi bi-list fs-4"></i>
            </button>
        </div>

        <main>
            @RenderBody()
        </main>

        <footer class="text-center border-top pt-4">
            <p class="mb-1">© 2025 Sistema de Gestión Veterinaria Inc. Todos los derechos reservados.</p>
        </footer>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Script menú -->
    <script>
        const sidebar = document.getElementById("sidebar");
        const mainContent = document.getElementById("mainContent");
        const toggleBtn = document.getElementById("toggleSidebar");

        toggleBtn.addEventListener("click", () => {
            if (window.innerWidth <= 768) {
                sidebar.classList.toggle("show");
            } else {
                sidebar.classList.toggle("collapsed");
                mainContent.classList.toggle("collapsed");
            }
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
