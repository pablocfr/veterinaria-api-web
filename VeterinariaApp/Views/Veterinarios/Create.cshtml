@model VeterinariaApp.Models.Veterinario

@{
    ViewData["Title"] = "Nuevo Veterinario";
    Layout = "~/Views/Shared/_LayoutVeterinaria.cshtml";
}

<div class="modal-dialog modal-lg">
    <div class="modal-content p-4">
        <div class="modal-header border-0">
            <h5 class="modal-title fw-bold text-primary">
                <i class="fas fa-user-md me-2"></i> Nuevo Veterinario
            </h5>
        </div>

        <div class="modal-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger small"></div>

                <div class="row g-3">
                    <!-- Nombre Completo -->
                    <div class="col-md-12">
                        <label asp-for="NombreCompleto" class="form-label fw-semibold"></label>
                        <input asp-for="NombreCompleto" class="form-control" placeholder="Ej. Juan Pérez" />
                        <span asp-validation-for="NombreCompleto" class="text-danger small"></span>
                    </div>

                    <!-- Especialidad -->
                    <div class="col-md-12">
                        <label asp-for="Especialidad" class="form-label fw-semibold"></label>
                        <input asp-for="Especialidad" class="form-control" placeholder="Ej. Cirugía, Medicina General" />
                        <span asp-validation-for="Especialidad" class="text-danger small"></span>
                    </div>

                    <!-- DNI -->
                    <div class="col-md-6">
                        <label asp-for="DNI" class="form-label fw-semibold"></label>
                        <input asp-for="DNI" class="form-control" placeholder="12345678" maxlength="15" />
                        <span asp-validation-for="DNI" class="text-danger small"></span>
                    </div>

                    <!-- Teléfono -->
                    <div class="col-md-6">
                        <label asp-for="Telefono" class="form-label fw-semibold"></label>
                        <input asp-for="Telefono" class="form-control" placeholder="987654321" />
                        <span asp-validation-for="Telefono" class="text-danger small"></span>
                    </div>

                    <!-- Correo -->
                    <div class="col-md-12">
                        <label asp-for="Correo" class="form-label fw-semibold"></label>
                        <input asp-for="Correo" type="email" class="form-control" placeholder="ejemplo@mail.com" />
                        <span asp-validation-for="Correo" class="text-danger small"></span>
                    </div>

                    <!-- Estado -->
                    <div class="col-md-6">
                        <label asp-for="Estado" class="form-label fw-semibold"></label>
                        <select asp-for="Estado" class="form-select">
                            <option value="true">Activo</option>
                            <option value="false">Inactivo</option>
                        </select>
                        <span asp-validation-for="Estado" class="text-danger small"></span>
                    </div>
                </div>

                <!-- Botones -->
                <div class="d-flex justify-content-center gap-3 mt-4">
                    <a asp-action="Index" class="btn btn-secondary btn-sm">
                        <i class="fas fa-arrow-left"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary btn-sm">
                        <i class="fas fa-save"></i> Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

